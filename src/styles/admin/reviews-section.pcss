.reviews {
    display: flex;
    flex-wrap: wrap;
    margin-left: -30px;
}

.reviews__item {
    margin-left: 30px;
    width: calc(100% / 3 - 30px);
    margin-bottom: 30px;

    @include tablets {
        width: calc(100% / 2 - 30px);
    }

    @include phones {
        width: 100%;
        margin-bottom: 15px;
    }
}

.reviews__form {
    margin-bottom: 30px;
}

.reviews__content {
    min-height: 220px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.reviews__content-text {
    line-height: 1.88;
    font-weight: 600;
}

.reviews__btns {
    display: flex;
    justify-content: space-between;
}





